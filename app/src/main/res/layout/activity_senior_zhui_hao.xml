<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_senior_zhui_hao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f5f6"
    tools:context=".listview.SeniorZhuiHaoActivity"
    >
    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:background="#fff"
        >
        <com.taovo.rjp.packagedemo.listview.SeniorInputView
            android:id="@+id/senior_input_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            >

        </com.taovo.rjp.packagedemo.listview.SeniorInputView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/senior_bottom_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f4f5f6"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:minHeight="50dp"
        android:padding="3dip">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/senior_zhushu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="12"
                    android:textColor="#333333"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/senior_qi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="34"
                    android:textColor="#333333"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/senior_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="56"
                    android:textColor="#eb1c42"
                    android:textSize="14sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/senior_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="账户余额：登录之后才能显示"
                android:textColor="#333333"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/senior_zhifu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:minHeight="32dp"
            android:minWidth="72dp"
            android:padding="5dp"
            android:text="支付"
            android:textColor="#333333"
            android:textSize="16sp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/senior_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_top"
        android:layout_above="@id/senior_bottom_label"
        android:layout_marginTop="10dp"
        android:descendantFocusability="beforeDescendants"
        >

    </ListView>


</RelativeLayout>